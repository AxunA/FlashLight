<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="bottom"
              android:orientation="vertical"
              android:padding="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:id="@+id/rl_operate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ToggleButton
            android:id="@+id/btnLight"
            style="@style/common_btn_style"
            android:textOff="@string/turn_on_light"
            android:textOn="@string/turn_off_light"/>

        <ToggleButton
            android:id="@+id/btnFlashLight"
            style="@style/common_btn_style"
            android:layout_below="@id/btnLight"
            android:layout_marginBottom="20dp"
            android:textOff="@string/turn_on_flash_light"
            android:textOn="@string/turn_off_flash_light"/>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_version_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="50dp"/>
</LinearLayout>
